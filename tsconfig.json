{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types", "src/types"],
    "types": ["node"]
  },
  "include": ["src/**/*",
          "src/**/*.ts",
          "src/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}